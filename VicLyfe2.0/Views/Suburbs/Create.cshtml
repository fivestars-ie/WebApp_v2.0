@model VicLyfe2._0.Models.Suburb

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    body, h1, h2, h3, h4, h5, h6 {
        font-family: "Raleway", Arial, Helvetica, sans-serif;
        font-weight: bold;
    }

    .myLink {
        display: none
    }
    img {
  filter: opacity(70%);
}
</style>
<body class="w3-light-grey" style="background-color:lavender;">

    <!-- Header -->
    <header class="w3-display-container w3-content w3-hide-small" style="max-width:1700px;">
        <img class="w3-image" src="~/Content/imageNew-1.jpg" alt="London" style="width:1700px;height:500px;">
        <div class="w3-display-middle" style="width:65%;margin-top:300px;">
            <div class="w3-bar w3-black">
                <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Flight');"><i class="fa fa-clock w3-margin-right"></i>Compare Regions</button>
                <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Hotel');"><i class="fa fa-Map w3-margin-right"></i>PR Points Calculator</button>
                <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Car');"><i class="fa fa-Map w3-margin-right"></i>Explore Suburb</button>
            </div>

            <!-- Tabs -->
            <div id="Flight" class="w3-container w3-white w3-padding-16 myLink">
                <h3>Did you know ?</h3>
                <p>Regional Victoria has a better quality of life vs Melbourne.</p>
                <div class="w3-row-padding" style="margin:0 -16px;">
                    <div class="w3-container">
                    </div>
                </div>
                <p><button class="w3-button w3-dark-grey">@Html.ActionLink("Find out now", "Compare", "Home")</button></p>
            </div>

            <div id="Hotel" class="w3-container w3-white w3-padding-16 myLink">
                <h3>
                    Find out how many points you have to apply for Australian PR before proceeding ?
                </h3>
                <p><button class="w3-button w3-dark-grey">@Html.ActionLink("Calculate Points", "Create", "Points_Calculator")</button></p>
            </div>

            <div id="Car" class="w3-container w3-white w3-padding-16 myLink">
                <h3>Suburb selected?</h3>
                <p><span class="w3-tag w3-deep-orange">Great Explore!</span> See what the suburb has to offer in terms of Hospitals, Supermarkets, Restaurants & more</p>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Explore" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

                @section Scripts {
                    @Scripts.Render("~/bundles/jqueryval")
                }
            </div>
        </div>
    </header>

    <!-- Page content -->
    <div class="w3-content" style="max-width:1700px;margin-top:150px;">

        <!-- Good offers -->
        <div class="w3-container w3-margin-top">
            <h2><b>VicLyfe, helping overseas students find a suburb to live in Regional Victoria</b></h2>
            <h2><b>What we have for you ?</b></h2>
        </div>

        <!-- First Photo Grid-->
        <div class="w3-row-padding w3-padding-16 w3-center" id="food">
            <div class="w3-quarter" style="border:double; border-color:skyblue;">
                <img src="~/Content/rendered-2.jpg" alt="Sandwich" style="width:100%;height:200px;">
                <h4><button class="w3-button w3-dark-grey">@Html.ActionLink("Our Vision", "About", "Home")</button></h4>
            </div>
            <div class="w3-quarter" style="border:double; border-color:skyblue;">
                <img src="~/Content/1-1024x978.png" alt="Steak" style="width:100%;height:200px;">
                <h4><button class="w3-button w3-dark-grey">@Html.ActionLink("Why Regional Victoria ?", "Compare", "Home")</button></h4>
            </div>
            <div class="w3-quarter" style="border:double; border-color:skyblue;">
                <img src="~/Content/PR.jpg" alt="Cherries" style="width:100%;height:200px;">
                <h4><button class="w3-button w3-dark-grey">@Html.ActionLink("Pathway for PR", "PRPath", "Home")</button></h4>
            </div>
            <div class="w3-quarter" style="border:double; border-color:skyblue;">
                <img src="~/Content/20151118_regionalvictoria.png" alt="Pasta and Wine" style="width:100%;height:200px;">
                <h4><button class="w3-button w3-dark-grey">@Html.ActionLink("Choose a Suburb", "Create", "Selected_region")</button></h4>
            </div>
        </div>

        
    <div class="w3-container" style="max-width:1700px;height:500px;">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
        <style>
            .mySlides {
                display: none;
            }
        </style>

        <div class="w3-content w3-display-container">
            <img class="mySlides" src="~/Content/Explore part - Barwon South Western Region.png" style="width:100%;height:500px;">
            <img class="mySlides" src="~/Content/Explore part - Gippsland.png" style="width:100%;height:500px;">
            <img class="mySlides" src="~/Content/Explore part - Grampians.png" style="width:100%;height:500px;">
            <img class="mySlides" src="~/Content/Explore part - Hume Region.png" style="width:100%;height:500px;">
            <img class="mySlides" src="~/Content/Explore part - Loddon Mallee Region.png" style="width:100%;height:500px;">

            <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
            <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
        </div>
        <div class="w3-bar" style="margin-bottom:-125px;">
            <button class="w3-button w3-dark-grey" align="center" 
                    style="margin-left: 600px;margin-top: -60px;position: absolute;">
                @Html.ActionLink("Compare the different regions", "Compare", "Home")
            </button>
        </div>
        <br />
        <br />
        <br />
        <script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
    }
        </script>
    </div>

    <!-- Footer -->
    <footer class="w3-center w3-black w3-padding-64" style="max-width:1700px;">
        <div>
            <p align="center" background-color="grey">@Html.ActionLink("Go Back to the Top", "Index", "Home")</p>
        </div>
        <div class="w3-xlarge w3-section">
           
        </div>
    </footer>

    <script>
    // Tabs
    function openLink(evt, linkName) {
        var i, x, tablinks;
        x = document.getElementsByClassName("myLink");
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        tablinks = document.getElementsByClassName("tablink");
        for (i = 0; i < x.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
        }
        document.getElementById(linkName).style.display = "block";
        evt.currentTarget.className += " w3-red";
    }

    // Click on the first tablink on load
    document.getElementsByClassName("tablink")[2].click();
    </script>

</body>
</html>






