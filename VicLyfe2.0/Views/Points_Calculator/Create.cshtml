@model VicLyfe2._0.Models.Points_Calculator

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <td>@Html.ActionLink("Home", "Index", "Home")  </td>
    <td> >> </td>
    <u style="display:inline;"> PR Points Calculator</u>

    <h3> <b>PR Points Calculator</b> </h3>
    <p class="btn btn-primary btn-lg" style="background-color: white; float: right">
        @Html.ActionLink("<< Back to Home", "Index", "Home")
    </p>
    <br>
    <br>


    <h4><b> Enter your Qualifications, Age, Work Experience and other required information to find out how much PR points you have scored </b> </h4>
    <style>
        .form-horizontal {
            box-sizing: border-box;
            width: 80%;
        }

        .form-group {
            width: 90%;
            padding: 12px;
            border: 1px solid #ccc;
            resize: vertical;
            background-color: lightgoldenrodyellow;
            margin-left: 35px;
        }

        p {
            font-weight: bold;
        }
    </style>
    <html>
    <body>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <p>Select the Age Group you belong to from the drop down below.</p>
                    <div class="col-md-10">
                        @Html.DropDownList("Age_group", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Age_group, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Select the Language Profieicency based on your score in English Language Assessments Examinations (IELTS/PTE).</p>
                    <p>IELTS - Level - Competent English - 6+ in all 4 components of IELTS</p>
                    <p>IELTS - Level - Proficient English - 7+ in all 4 components of IELTS</p>
                    <p>IELTS - Level - Superior English - 8+ in all 4 components of IELTS</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Language_proficiency", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Language_proficiency, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Have you met the requirements for the award of degree, diploma, advanced diploma or trade qualifications which took atleast 2 years of full-time study in Australia ?</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Australian_study_requirement", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Australian_study_requirement, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>What is your highest Qualification ?</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Qualification", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Qualification, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Have you met the requirements for the award of an Australian Specialist educational qualification ? (Degree by Research or Doctrate) </p>

                    <div class="col-md-10">
                        @Html.DropDownList("Doctrate_or_Master_by_research", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Doctrate_or_Master_by_research, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>How long have you worked in your nominated field or closely related skilled occupation overseas ?</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Overseas_work_experience", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Overseas_work_experience, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>How long have you worked in your nominated field or closely related skilled occupation in Australia ?</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Australian_work_experience", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Australian_work_experience, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Does these apply to your partner ? Select one from the below list.(Leave default if not applicable) </p>

                    <div class="col-md-10">
                        @Html.DropDownList("Partner_skills", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Partner_skills, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p>Are you accredited as a para-professional interpreter or translator (level 2) by the Nation Accredition Authority for Translators and Interpreters.</p>

                    <div class="col-md-10">
                        @Html.DropDownList("Designated_language_skills", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Designated_language_skills, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Calculate Points" class="btn btn-default" style="font-weight:bold;background-color:white;" />
                    </div>
                </div>
            </div>
        }
    </body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</body>