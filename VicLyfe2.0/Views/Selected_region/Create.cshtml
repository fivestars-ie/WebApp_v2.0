@model VicLyfe2._0.Models.Selected_region

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <body>
        <style>
            .form-horizontal {
                box-sizing: border-box;
            }

            .form-group {
                width: 100%;
                padding: 12px;
                border: 1px solid #ccc;
                border-radius: 4px;
                resize: vertical;
                background-color: lightblue;
            }
        </style>

        <h4><b>Select a Region.</b></h4>
        <h4>
            Considering that our Information Hub has provided you with sufficient information we expect you to select a region first
            before proceeding to select a suburb.
        </h4>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Select a Region from the below drop down list.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Region_name, "Region_name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("Region_name", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Region_name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Continue" class="btn btn-default" style="background-color:lightgray;" />
                    </div>
                </div>
            </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
