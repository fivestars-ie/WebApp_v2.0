@model VicLyfe2._0.Models.Suburb

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <html>
    <body style="background-color:silver;">

        <div class="w3-container" style="max-height:100%;width:100%;">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
            <style>
                .mySlides {
                    display: none;
                }

                .myLink {
                    display: none
                }
            </style>

            <div class="w3-content w3-display-container">
                <img class="mySlides" src="~/Content/Homepage-Slides1.jpg" style="width:100%;height:100%;object-fit:fill">
                <img class="mySlides" src="~/Content/Homepage-slides 2.png" style="width:100%;height:100%;object-fit:fill">
                <img class="mySlides" src="~/Content/Homepage - Slide 3.jpg" style="width:100%;height:100%;object-fit:fill">
                <img class="mySlides" src="~/Content/Homepage - Slide 4.jpg" style="width:100%;height:100%;object-fit:fill">

                <button class="w3-button w3-black w3-display-left" onclick="plusDivs(-1)">&#10094;</button>
                <button class="w3-button w3-black w3-display-right" onclick="plusDivs(1)">&#10095;</button>
            </div>

            <br />
            <br />

            <div class="w3-container" style="width:auto;max-width:70%;margin-top:-4%;margin-left:15%;">
                <div class="w3-bar w3-black">
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Flight');" style="width:auto;"><i class="fa fa-clock w3-margin-right"></i>Compare Facts</button>
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Hotel');" style="width:auto;"><i class="fa fa-Map w3-margin-right"></i>PR Points Calculator</button>
                    <button class="w3-bar-item w3-button tablink" onclick="openLink(event, 'Car');" style="width:auto;"><i class="fa fa-Map w3-margin-right"></i>@Html.ActionLink("Explore a suburb", "Create", "Suburbs")</button>
                </div>

                <!-- Tabs -->
                <div id="Flight" class="w3-container w3-white w3-padding-16 myLink" style="border:solid;">
                    <h3><b> Did you know ? </b> </h3>
                    <p><b>Regional Victoria has a better quality of life than Melbourne (Based on average weekly rent, number of jobs, hospitals, parks, crime rate)</b> </p>
                    <div class="w3-row-padding" style="margin:0 -16px;">
                        <div class="w3-container">
                        </div>
                    </div>
                    <p><button class="w3-button w3-dark-grey">@Html.ActionLink("Find out now", "Compare", "Home")</button></p>
                </div>

                <div id="Hotel" class="w3-container w3-white w3-padding-16 myLink" style="border:solid;">
                    <h3>
                        <b>
                            Find out how many points you have to apply for Australian PR?
                        </b>
                    </h3>
                    <p><button class="w3-button w3-dark-grey">@Html.ActionLink("Calculate Points", "Create", "Points_Calculator")</button></p>
                </div>

                <div id="Car" class="w3-container w3-white w3-padding-16 myLink" style="border:solid;">
                    <h4><b> Find out what the suburb you have chosen has to offer in terms of restaurants, train stations, shopping malls, supermarkets, hospitals</b></h4>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.city, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.city, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Explore" class="w3-button w3-dark-grey" />
                                </div>
                            </div>
                        </div>
                    }

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }
                </div>
            </div>
            <script>
                var slideIndex = 1;
                showDivs(slideIndex);

                function plusDivs(n) {
                    showDivs(slideIndex += n);
                }

                function showDivs(n) {
                    var i;
                    var x = document.getElementsByClassName("mySlides");
                    if (n > x.length) { slideIndex = 1 }
                    if (n < 1) { slideIndex = x.length }
                    for (i = 0; i < x.length; i++) {
                        x[i].style.display = "none";
                    }
                    x[slideIndex - 1].style.display = "block";
                }

                function openLink(evt, linkName) {
                    var i, x, tablinks;
                    x = document.getElementsByClassName("myLink");
                    for (i = 0; i < x.length; i++) {
                        x[i].style.display = "none";
                    }
                    tablinks = document.getElementsByClassName("tablink");
                    for (i = 0; i < x.length; i++) {
                        tablinks[i].className = tablinks[i].className.replace(" w3-red", "");
                    }
                    document.getElementById(linkName).style.display = "block";
                    evt.currentTarget.className += " w3-red";
                }

                // Click on the first tablink on load
                document.getElementsByClassName("tablink")[2].click();

            </script>
        </div>

        <!-- Project Section -->
        <div class="w3-container w3-padding-32" id="projects" style="margin-top:auto">
            <h3 class="w3-border-bottom w3-border-light-grey w3-padding-16"><b> What we offer ? </b></h3>
            <h6><b> Click on the button to know more information about each section</b></h6>
        </div>

        <div class="w3-row-padding" style="border:solid;">
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">@Html.ActionLink("About Us", "About", "Home")</div>
                    <img src="~/Content/Homepage - Our version.jpg" alt="House" style="width:100%">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">@Html.ActionLink("Choose a Suburb", "Create", "Selected_region")</div>
                    <img src="~/Content/Homepage-Choose a suburb .jpg" alt="House" style="width:100%">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">@Html.ActionLink("Comparisons", "Compare", "Home")</div>
                    <img src="~/Content/Honepage - Why Regional.jpg" alt="House" style="width:100%">
                </div>
            </div>
            <div class="w3-col l3 m6 w3-margin-bottom">
                <div class="w3-display-container">
                    <div class="w3-display-topleft w3-black w3-padding">@Html.ActionLink("Visa Streams", "PRPath", "Home")</div>
                    <img src="~/Content/Visa - Pathway for PR.jpg" alt="House" style="width:100%">
                </div>
            </div>
        </div>
        <footer class="w3-center w3-black w3-padding-16" style="margin-top:15px;">

            <p background-color="grey" align="center">@Html.ActionLink("Go Back to Top", "Index", "Home")</p>


        </footer>



    </body>
    </html>




